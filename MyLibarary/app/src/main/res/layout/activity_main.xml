<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
  >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00d2ff"
    android:text="My Library"
    android:textSize="30dp"
    android:padding="10dp"
    android:textColor="@color/black"
    android:id="@+id/main"
    />
   <ImageView
       android:layout_width="150dp"
       android:layout_height="150dp"
       android:src="@drawable/img_3"
android:layout_marginTop="20dp"
       android:layout_centerHorizontal="true"
       android:id="@+id/mainimg"
android:layout_below="@+id/main"
       />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/mainimg"
    android:layout_centerHorizontal="true"
    android:text="My library"
android:textStyle="bold"
    android:textSize="30dp"
    android:textColor="@color/black"

    android:id="@+id/lib"

    />
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
android:layout_below="@id/lib"
    android:layout_centerHorizontal="true"
       android:layout_marginTop="15dp"
       android:backgroundTint="#8fd3fe"
       >
      <Button
          android:layout_width="270dp"
          android:layout_height="wrap_content"
android:text="See All Books"
          android:id="@+id/seeallbooks"
          android:textSize="15dp"
         android:layout_marginBottom="10dp"
          android:backgroundTint="#8fd3fe"
          />
      <Button
          android:layout_width="270dp"
          android:layout_height="wrap_content"
          android:text="Currently Reading Books"
          android:id="@+id/CurrentlyReadingBooks"

          android:textSize="15dp"
          android:layout_marginBottom="10dp"
          android:backgroundTint="#8fd3fe"
          />


      <Button
          android:layout_width="270dp"
          android:layout_height="wrap_content"

          android:text="All Read Books"
          android:id="@+id/AllReadBooks"
          android:backgroundTint="#8fd3fe"
          android:layout_marginBottom="10dp"
          android:textSize="15dp"
          />
      <Button
          android:layout_width="270dp"
          android:layout_height="wrap_content"
          android:text="Your Whilist"
          android:id="@+id/YourWhilist"
          android:textSize="15dp"

          android:layout_marginBottom="10dp"
          android:backgroundTint="#8fd3fe"
          />
      <Button
          android:layout_width="270dp"
          android:layout_height="wrap_content"
          android:text="Your Favourties"
          android:id="@+id/YourFavourties"
          android:textSize="15dp"

          android:layout_marginBottom="10dp"
          android:backgroundTint="#8fd3fe"
          />
      <Button
          android:layout_width="270dp"
          android:layout_height="wrap_content"
          android:text="About"
          android:id="@+id/About"
          android:textSize="15dp"
          android:textStyle="bold"
          android:layout_marginBottom="10dp"
          android:backgroundTint="#8fd3fe"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="40dp"
          android:backgroundTint="@color/material_dynamic_primary60"

          android:text="Developed By Logananth A"
          android:textSize="15dp"
          android:textColor="@color/black"

          />
   </LinearLayout>



</RelativeLayout>