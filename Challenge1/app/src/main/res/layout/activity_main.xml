<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp">
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:layout_marginLeft="30dp"
    android:src="@drawable/img_1"
    android:id="@+id/img"
    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:text="Pick Image"
        android:id="@+id/button"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/img"
        android:id="@+id/linear"
        >
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
          android:hint="Name"
            android:inputType="text"
            android:textSize="20dp"
            android:id="@+id/name"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:hint="E-mail"
            android:textSize="20dp"
            android:id="@+id/email"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:textSize="20dp"
            android:id="@+id/pass"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:hint="Re-Enter Password"
            android:textSize="20dp"
            android:id="@+id/reenter"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
           android:text="Gender:"
            android:textSize="20dp"
            android:id="@+id/gender"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:id="@+id/radiogrp"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="13dp"
                android:id="@+id/grp1"

            />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="13dp"
                android:id="@+id/grp2"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textSize="13dp"
                android:id="@+id/grp3"

                />

        </RadioGroup>





    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linear"
        android:text="Country:"
        android:textSize="20dp"
        android:id="@+id/cntry"
        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/linear"
       android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="90dp"
android:textAlignment="center"
        android:id="@+id/bigtext"
      android:layout_toRightOf="@+id/linear"

    android:text="These is our lisence agreement: You can share this app anywhere that you want and use it however you want. Just remember to enjoy"

        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bigtext"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:text="I Agree"
        android:textStyle="bold"
        android:id="@+id/agree"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="Register"
        android:id="@+id/btn2"
      />
</RelativeLayout>